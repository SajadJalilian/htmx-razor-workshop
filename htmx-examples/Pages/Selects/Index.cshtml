@page "{handler?}"
@model htmx_examples.Pages.Selects.IndexModel

@{
    ViewData["Title"] = "Index";
}

<!-- Main Content -->
<div id="content">
    <!-- Begin Page Content -->
    <div class="container-fluid">
        <!-- Page Heading -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h4 class="m-0 font-weight-bold text-primary">Select</h4>
            </div>
            <div class="card-body">

                <h4>Pick A Company then a Model</h4>

                <div>
                    <label class="control-label">Company</label>
                    <select name="company" hx-get="/Selects/models" hx-target="#models" hx-indicator=".htmx-indicator">
                        @foreach (var company in Model.Companies)
                        {
                            <option value="@company">@company</option>
                        }
                    </select>
                </div>
                <div>
                    <label class="control-label">Model</label>

                    <select id="models" name="model">
                        <partial name="_modelSelector" model="@Model.CarModels"/>
                    </select>
                </div>

            </div>
        </div>

    </div>
    <!-- /.container-fluid -->
</div>
<!-- End of Main Content -->